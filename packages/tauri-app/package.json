{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:ui & sleep 1 && npm run dev:android",
    "dev:ui": "vite --host 0.0.0.0",
    "dev:android": "tauri android dev",
    "dev:ui:kill": "lsof -ti:1420 | xargs kill -9 2>/dev/null || true",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:clean": "cd src-tauri && cargo clean",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "quickfix": "tsc --noEmit"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@tauri-apps/api": "^2",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "playwright": "^1.55.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}
